<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="vendor/autoload.php"
          colors="true"
          convertErrorsToExceptions="true"
          convertNoticesToExceptions="true"
          convertWarningsToExceptions="true"
          processIsolation="false"
          stopOnFailure="false"
          syntaxCheck="false"
>

  <testsuites>
    <testsuite name="Nepali Calendar Tests">
      <directory>tests/Pachabhaiya/NepaliCalendar/</directory>
      <file>tests/Pachabhaiya/NepaliCalendar/NepaliCalendarTest.php</file>
    </testsuite>
  </testsuites>

  <filter>
    <whitelist>
      <directory suffix=".php">lib/Pachabhaiya/NepaliCalendar/</directory>
    </whitelist>
  </filter>

  <php>
    <ini name="date.timezone" value="Asia/Katmandu"/>
  </php>
</phpunit>
